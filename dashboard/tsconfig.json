{
  "extends": "./node_modules/@microsoft/rush-stack-compiler-4.5/includes/tsconfig-web.json",
  "compilerOptions": {
    "target": "es5",
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "inlineSources": false,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/myhub-viva-library"
    ],
    "types": [
      "es6-promise",
      "webpack-env",
      "jest"
    ],
    "lib": [
      "es5",
      "dom",
      "es2015",
      "es2015.collection",
      "es2015.promise",
      "es2018.promise",
      "ES2018.Regexp",
      "es2017.object",
      "es2019.array"
    ],
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}